@using Feedbackformfrontend.Components
@using Feedbackformfrontend.Models
@inject FormClient _client


@page "/dashboard"
<h3>DashBoard</h3>

<div class="container my-4">
    <table class="table table-striped table-bordered table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Company Name</th>
                <th scope="col">Job Title</th>
                <th scope="col">Job Id</th>
                <th scope="col">Reasons</th>
                <th scope="col">Details</th>
                <th scope="col">Applied On</th>
            </tr>
        </thead>

        <tbody>
            @if (allFeedbacks is null)
            {
                <tr>
                    <td colspan="7" class="text-center text-muted"><em>Loading...</em></td>
                </tr>
            }
            else
            {
                foreach (var feedBack in allFeedbacks)
                {
                    <tr>
                        <th scope="row">@feedBack.Id</th>
                        <td>@feedBack.CompanyName</td>
                        <td>@feedBack.JobTitle</td>
                        <td>@feedBack.JobId</td>
                        <td>@feedBack.Reasons</td>
                        <td>@feedBack.Details</td>
                        <td>@feedBack.AppliedOn.ToString("dd MMM yyyy")</td>
                        <td>
                        <div>
                            <button  class="btn btn-danger" 
                         data-bs-toggle="modal"
                         data-bs-target="@GetModalId(feedBack)"  >
                            <i class="bi bi-trash"></i>
                        </button>
                        </div>
                         <Delete feedBack=@feedBack/>
                           
                        </td>
                        
                    </tr>
                }
            }
        </tbody>
    </table>
</div>


@code {
  
private List<FeedBack>? allFeedbacks;

protected override void OnInitialized()
{
    allFeedbacks = _client.GetFeedback();
}


public string GetModalId(FeedBack feedBack)
{
    Console.WriteLine(Delete.ModalId(feedBack));
    return $"#{Delete.ModalId(feedBack)}";

}

}
